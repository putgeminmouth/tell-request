{
    "manifest_version": 2,
    "name": "Tell Request",
    "description": "Provide guided narratives for your code change requests",
    "version": "0.0.7",
    "homepage_url": "https://github.com/putgeminmouth/tell-request",
    "icons": {
        "48": "icon48.png"
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icon48.png"
        },
        "default_title": "Tell Request",
        "default_popup": "popup/popup.html"
    },
    "optional_permissions": [],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/*/pull/*/files"
            ],
            "js": [
                "content_scripts/pull.import.js"
            ],
            "css": [
                "content_scripts/pull.css"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "src/*",
        "content_scripts/*"
    ],
    "background": {
        "scripts": [
            "background/background.js"
        ],
        "persistent": false
    },
    "options_ui": {
        "page": "options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "tell@tellrequest.com"
        }
    }
}